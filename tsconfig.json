{
  "extends": "@diplodoc/tsconfig",
  "compilerOptions": {
    "target": "es6",
    "outDir": "build",
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "*": ["./src/app/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"],
  "types": ["node"],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
